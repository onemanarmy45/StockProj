@model StockPrice

<h1>@ViewBag.Title</h1>

<p>The current stock price for @Model.TickerSymbol is $@Model.CurrentPrice.</p>

<p>This data was last updated at @Model.Timestamp.ToString("F").</p>

@using (Html.BeginForm("GetStockPrice", "StockPrice", FormMethod.Get))
{
    <label for="tickerSymbol">Enter a stock ticker symbol:</label>
    @Html.TextBox("tickerSymbol")
    <input type="submit" value="Get Stock Price" />
}